<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.studyjams.mdvideo">

    <!-- 网络访问 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 屏幕锁定 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 读写SD卡的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 申明自定义权限 -->
    <permission android:name="com.studyjams.mdvideo.PRIVODER"/>

    <application
        android:name=".MDVideoApplication"
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainFrame.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:theme="@style/DrawerLayoutTheme">

        </activity>

        <!-- 测试版本不固定界面，方便测试横竖屏切换时是否有问题  android:screenOrientation="landscape" -->
        <activity
            android:name=".PlayerModule.PlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:launchMode="singleTop"
            android:parentActivityName=".MainFrame.MainActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/MyTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="video/*"/>
                <data android:mimeType="audio/*"/>
                <data android:scheme="http"/>
                <data android:scheme="https"/>
                <data android:scheme="content"/>
                <data android:scheme="asset"/>
                <data android:scheme="file"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="video/*"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.studyjams.mdvideo.PlayerModule.ExoPlayerV2.PlayerActivityV2"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:launchMode="singleTop"
            android:parentActivityName=".MainFrame.MainActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/MyTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="video/*"/>
                <data android:mimeType="audio/*"/>
                <data android:scheme="http"/>
                <data android:scheme="https"/>
                <data android:scheme="content"/>
                <data android:scheme="asset"/>
                <data android:scheme="file"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data android:mimeType="video/*"/>
            </intent-filter>
        </activity>

        <!-- 用来存储视频信息的provider -->
        <provider
            android:name=".Data.source.SamplesProvider"
            android:authorities="${packageName}"
            android:exported="false"
            android:multiprocess="true"
            android:permission="com.studyjams.mdvideo.PRIVODER">
        </provider>

        <service
            android:name=".Data.source.remote.SyncService"
            android:exported="false">
        </service>
        <!--最先启动的activity，用于解决烦人的黑白屏问题-->
        <activity android:name=".MainFrame.WelcomeActivity"
            android:theme="@style/StartActivityTransparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>