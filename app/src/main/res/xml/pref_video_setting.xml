<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_video_list_titles"
        android:entryValues="@array/pref_video_list_values"
        android:key="video_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_storage_video"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="@string/pref_description_social_recommendations"
        android:title="@string/pref_title_social_recommendations"/>

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_voice_list_titles"
        android:entryValues="@array/pref_voice_list_values"
        android:key="example_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_add_voice"/>
    <com.studyjams.mdvideo.Setting.AboutAuthor
        android:title="@string/pref_about_author"
        android:key="pref_key_storage_settings"/>

</PreferenceScreen>