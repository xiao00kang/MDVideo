<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorHalfTransparent"
    android:layoutDirection="ltr"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/player_exit"

        style="@style/playerPopupTopImageView"
        android:background="@drawable/player_icon_back"
        android:contentDescription="@null"/>

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"/>

    <TextClock
        style="@style/playerPopupTextView"
        android:layout_marginEnd="16dp"
        android:format24Hour="@string/player_system_time"/>

    <ImageView
        android:id="@+id/player_subtitle"
        style="@style/playerPopupTopImageView"
        android:background="@drawable/player_icon_subtitle"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/player_more"
        style="@style/playerPopupTopImageView"
        android:background="@drawable/player_icon_list"
        android:contentDescription="@null"/>

</LinearLayout>